default_platform(:android)

platform :android do
  desc "Lane for Firebase app distribution"
  lane :firebase_distribution do
   sh "flutter clean"
   sh "flutter build apk --target-platform android-arm64 --analyze-size"
   firebase_app_distribution(
     app: "1:415940511917:android:bbd5c326af14f2661a9e24",
     firebase_cli_token: ENV["FIREBASE_CIL_TOKEN"],
     android_artifact_path: "../build/app/outputs/flutter-apk/app-release.apk",
     android_artifact_type: "APK",
     testers: "ahmadabbass822@gmail.com, eng.ahmadabbas8@gmail.com",
     release_notes: "Hello World Form Ahmad Abbas"
   )
  end

end
